<%= form_for [@batch, @item]  do |f| %>
  <% if @item.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@item.errors.count, "error") %> prohibited this item from being saved:</h2>

      <ul>
      <% @item.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>    
  <% end %>


<div class="container">
<div class="form-group row">  
  <div class="col-10">
    <%= f.label :id, 'Barcode Id', class: 'col-2 col-form-label' %>
    <%= f.text_field :id %>

  </div>
</div>


<div class="form-group row">  
  <div class="col-10">

    <%= f.label :size, class: 'col-2 col-form-label' %> 
    <%= f.select :size, ["S","M", "L", "XL", "XXL"]%>

  </div>
</div>

  
<div class="form-group row">  
  <div class="col-10">

    <%= f.label :color, class: 'col-2 col-form-label' %>
    <%= f.text_field :color%>

  </div>
</div>

<div class="form-group row">  
  <div class="col-10">

    <%= f.label :price_sold, 'Price Sold (Fill Only When Items Bought By Clients)', class: 'col-2 col-form-label' %>

    <%= f.text_field :price_sold%>

  </div>
</div>


  
<div class="form-group row">  
  <div class="col-10">
    <%= f.label :status, class: 'col-2 col-form-label' %>    
    <%= f.select :status, ["sellable","clearanced","not sellable", "sold", ]%>
  </div>
</div>



<div class="form-group row">  
  <div class="col-10">

    <%= f.label :style_id, class: 'col-2 col-form-label' %>
    <%= f.select :style_id, Style.all.map{ |f| [f.name, f.id]}%>
  </div>
</div>





  
<div class="form-group row">  
  <div class="col-10">
    <%= f.submit 'Submit', class: 'btn btn-primary'%>
  </div>
</div>


</div>
<% end %>

